<%= form_for @meal do |f| %>
 
  <% if @meal.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@meal.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @meal.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div id="form-wrapper">
	  <div id="main">
	    <p>
	      <%= f.label :title %><br>
	      <%= f.text_field :title %>
	    </p>
	   
	    <p>
	      <%= f.label :day %><br>
	      <%= f.text_field :day %><br>
	      <%= f.label :month %><br>
	      <%= f.text_field :month %><br>
	      <%= f.label :year %><br>
	      <%= f.text_field :year %><br>
	    </p>
	  </div>
	  <div id="details">
	    <p>
	      <%= f.label :meal_details  %><br>
	      <%= f.text_area :meal_details %>
	    </p>    
	  </div>
  </div>
  <p>
    <%= f.submit %>
  </p>
    
 <% end %>