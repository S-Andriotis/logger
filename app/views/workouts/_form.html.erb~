<%= form_for @workout do |f| %>
 
  <% if @workout.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@workout.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @workout.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 <div = id="main">
 
    <%= f.label :title %>
    <%= f.text_field :title %>
 
 
  
    <%= f.label :type %>
    <%= f.text_field :workout_type %>
  
  
  
    <%= f.label :duration %>
    <%= f.text_field :duration %>
    
  
  
    <%= f.label :intensity %>
    <%= f.text_field :intensity %>
  
   
  
    <%= f.label :day %>
    <%= f.text_field :day %>
    <%= f.label :month %>
    <%= f.text_field :month %>
    <%= f.label :year %>
    <%= f.text_field :year %>
  
 </div>
 <div = id="details">
  
    <%= f.label :workout_details %>
    <%= f.text_area :workout_details %>
  

 </div>
  
    <%= f.submit %>
  
 
<% end %>